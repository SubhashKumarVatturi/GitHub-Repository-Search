<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_4"
    android:layout_marginLeft="@dimen/padding_8"
    android:layout_marginRight="@dimen/padding_8"
    android:layout_marginTop="@dimen/padding_4"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/padding_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            app:fontFamily="@font/roboto_bold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_8"
            app:fontFamily="@font/roboto" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_8">

            <TextView
                android:id="@+id/tvUpdatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/tvWatchers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/ic_watchers"
                android:drawablePadding="@dimen/padding_4"
                android:drawableStart="@mipmap/ic_watchers"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>